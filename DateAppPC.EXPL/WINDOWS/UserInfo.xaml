<Window x:Class="DateAppPC.EXPL.WINDOWS.UserInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DateAppPC.EXPL.WINDOWS"
        mc:Ignorable="d"
        Title="UserInfo" Height="450" Width="800"
        Closed="ClosedWindow">
    <Grid>
        <Label FontSize="20" Margin="0,0,0,0"> Имя: </Label>
        <Label FontSize="20" Margin="0,70,0,0"> Ник: </Label>
        <Label FontSize="20" Margin="0,140,0,0"> Интересы (Через запятую): </Label>
        <Label FontSize="20" Margin="0,210,0,0"> О себе: </Label>
        <TextBox x:Name = "UserName" Height="40" VerticalAlignment="Top"  Margin="0,35,0,0"></TextBox>
        <TextBox x:Name = "NickName" Height="40" VerticalAlignment="Top"  Margin="0,105,0,0"></TextBox>
        <TextBox x:Name = "Interests" Height="40" VerticalAlignment="Top"  Margin="0,175,0,0"></TextBox>
        <TextBox x:Name = "Info" Height="100" VerticalAlignment="Top"  Margin="0,245,0,0"></TextBox>
        <Button Height="50" Width="200" Margin="550,350,0,0" Click="PictureChose"> ВЫБРАТЬ КАРТИНКУ ПРОФИЛЯ</Button>
        <DatePicker x:Name="Age" VerticalAlignment="Bottom" Width="200" Margin="550,0,0,75" > </DatePicker>
    </Grid>
</Window>
